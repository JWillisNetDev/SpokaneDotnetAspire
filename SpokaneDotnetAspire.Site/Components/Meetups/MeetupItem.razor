@rendermode InteractiveServer

<MudCard Elevation="2" Class="mt-4">
    <MudCardHeader>
        <MudText Typo="Typo.h3">@(Meetup.Title)</MudText>
        <MudSpacer />
        <MudLink Typo="Typo.caption" Href="@(Meetup.MeetupUrl)">View on Meetup</MudLink>
    </MudCardHeader>
    <MudCardContent>
        <MudGrid>
            <MudItem xs="12" sm="6" md="3">
                <MudImage Src="@(Meetup.ImageUri?.AbsoluteUri)" Class="mud-width-full py-4" />
            </MudItem>
            <MudItem xs="12" sm="6" md="9">
				<MudText Typo="Typo.body1">@(Meetup.Content)</MudText>
            </MudItem>
        </MudGrid>
    </MudCardContent>
    <MudCardActions>
        <MudIconButton OnClick="@(_ => OnDelete.InvokeAsync(Meetup))"Color="Color.Error" Icon="@Icons.Material.Filled.Delete"/>
        <MudIconButton Color="Color.Warning" Icon="@Icons.Material.Filled.Edit"/>
    </MudCardActions>
</MudCard>

@code
{
    [Parameter]
    public required Meetup Meetup { get; set; }

	[Parameter]
	public EventCallback<Meetup> OnDelete { get; set; }
}
